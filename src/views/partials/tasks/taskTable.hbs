{{#if tasks}}
<table class="table table-bordered table-hover table-dark">
  <thead>
    <tr>
      <th>N.</th>
      <th>Title</th>
      <th>Descriptions</th>
      <th>Operations</th>
    </tr>
  </thead>
  <tbody>
    {{#each tasks}}
    <tr>
      <td>{{@index}}</td>
      <td>{{title}}</td>
      <td>{{description}}</td>
      <td>
        {{#if done}}
        <a href="/toggleDone/{{_id}}" class="btn btn-warning">undone</a>
        {{else }}
        <a href="/toggleDone/{{_id}}" class="btn btn-success">done</a>
        {{/if }}
        <a href="/edit/{{_id}}" class="btn btn-info">edit</a>
        <a href="/delete/{{_id}}" class="btn btn-danger">delete</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
{{else}}
<div class="h-100 d-flex align-items-center justify-content-center">
  <div class="text-center text-white">
    <h1>No tasks</h1>
<img src="/icons/book.svg" alt="" class="w-200">
  </div>
</div>
{{/if}}